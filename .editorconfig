# https://editorconfig.org/

root = true

# Use unix-style newlines with a new line at EOF. No trailing whitespace.
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.go,go.mod,go.sum}]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
